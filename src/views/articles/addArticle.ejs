<h1>Create Article</h1>
<button onclick="window.history.back()">Back</button><br /><br />
<form
  method="POST"
  action="http://3.94.211.109:8000/api/articles/"
  enctype="application/x-www-form-urlencoded"
>
  <input type="hidden" name="author_id" value="15" placeholder="Author ID" />
  <input type="text" name="title" value="" placeholder="Title" />
  <input type="text" name="slug" value="" placeholder="Slug" />
  <input type="text" name="description" value="" placeholder="Description" />
  <!-- <input type="text" name="content" value="" placeholder="Content" /> -->
  <textarea
    name="content"
    cols="20"
    id="content"
    rows="5"
    placeholder="Content"
  ></textarea>

  <input type="text" name="language" value="" placeholder="Language" />
  <input type="hidden" name="tags" value="{}" />
  <input type="submit" value="Submit" />
</form>

<script src="/js/ckeditor/ckeditor.js"></script>
<script>
  CKEDITOR.replace("content");
</script>

<script>
  CKEDITOR.replace("content", {
    extraPlugins: "editorplaceholder",
    editorplaceholder: "Start typing here...",
  });
</script>
